<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="1dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"
        android:background="@color/background_color"
        tools:ignore="MissingConstraints">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_70dp"
            android:layout_weight="2"
            android:layout_margin="@dimen/margin_product_des">


            <LinearLayout

                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp"
                android:orientation="vertical"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/img_user_image"
                    android:layout_width="@dimen/_100dp"
                    android:layout_height="@dimen/_100dp"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_right_svg" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_product_des"
                android:layout_weight="5"
                android:layout_marginLeft="@dimen/margin_product_des"
                android:layout_marginRight="@dimen/margin_product_des"
                android:layout_marginBottom="@dimen/margin_product_des"
                android:weightSum="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                  >

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:fontFamily="@font/azosans_medium"
                        android:text="Mr."
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_firstname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_top_product_view"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:fontFamily="@font/azosans_medium"
                        android:text="Fisrtname"
                        android:textColor="@color/blacklight"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_lastname"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/azosans_medium"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_top_product_view"
                        android:visibility="visible"
                        android:text="Lastname"
                        android:textColor="@color/blacklight"
                        android:textSize="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/margin_top_product_view"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:fontFamily="@font/azosans_medium"
                        android:text="Fisrtname"
                        android:textColor="@color/blacklight"
                        android:textSize="12dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/tv_country_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_top_product_view"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:fontFamily="@font/azosans_medium"
                        android:text="Fisrtname"
                        android:textColor="@color/blacklight"
                        android:textSize="12dp" />



                </LinearLayout>



            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="7"
            android:layout_weight="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="yesterday"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/img_user_details"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="2"
                android:padding="6dp"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/black" />



        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



